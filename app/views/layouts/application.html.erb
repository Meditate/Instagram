<!DOCTYPE html>
<html>
<head>
  <title>Instagram</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if user_signed_in? %>
    <div id="sidebar">
      <div id="top_side">
        <div id="photo">
          <%= image_tag @user_photo, style:"height:100px;", alt: ""%>
        </div>
        <div id="about">
          <%= @user_about%>
        </div>
      </div>
      <div id="bot_side">
        <ul>
          <li><%=link_to "Home", root_path %></li>
          <li><%=link_to "New pic", new_post_path %></li>
          <li><%=link_to "Log out", destroy_user_session_path, :method => :delete %></li>
          <li><%=link_to "Edit profile", edit_user_registration_path %></li>
        </ul>
        <div id="notice" style="left:1em;"><%= notice %></div>
      </div>
    </div>
    <div id="wrap" style="margin-left: 250px;">
      <%= yield %>
    </div>
<% end %>
<% if !user_signed_in?%>
    <div id="wrap">
        <div id="header">
            <div id="notice" style="top:.6em; left:.6em; color:white"><%= notice %></div>
            <div id="logo">
                <%=link_to "Instagram", root_path, class: "logo" %>
            </div>
            <div id="authentication">
                <%=link_to "Sign In", user_session_path,:method => :post, class:'authenticate' %>
                <%=link_to "Sign Up", new_user_registration_path, class:'authenticate'%>
            </div>
        </div>
        <%= yield %>
    </div>
<% end %>
</body>
</html>
